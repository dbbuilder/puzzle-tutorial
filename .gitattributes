# Force LF line endings for shell scripts and Docker files
*.sh text eol=lf
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Force LF for configuration files
*.json text eol=lf
*.xml text eol=lf
*.config text eol=lf
*.conf text eol=lf

# Windows specific files
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary